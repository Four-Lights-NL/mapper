{
	"name": "@fourlights/mapper",
	"version": "1.0.0",
	"description": "A simple data mapper written in typescript",
	"packageManager": "npm@10.5.0",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"release": "release-it",
		"build": "tsup",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"test": "jest"
	},
	"author": "Four Lights <engineering@fourlights.nl> (https://github.com/Four-Lights-NL)",
	"maintainers": [
		"Thomas Rijpstra - Four Lights <thomas@fourlights.nl> (https://github.com/trijpstra-fourlights)"
	],
	"homepage": "https://github.com/Four-Lights-NL/mapper#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Four-Lights-NL/mapper.git"
	},
	"bugs": {
		"url": "https://github.com/Four-Lights-NL/mapper/issues"
	},
	"license": "MIT",
	"keywords": [
		"i18next",
		"plugin",
		"postprocess",
		"postprocessor",
		"dompurify"
	],
	"devDependencies": {
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/jest": "^29.5.12",
		"jest": "^29.7.0",
		"oxlint": "^0.2.15",
		"prettier": "^3.2.5",
		"release-it": "^17.1.1",
		"ts-jest": "^29.1.2",
		"tsup": "^8.0.2",
		"typescript": "^5.4.3"
	},
	"dependencies": {
		"defu": "^6.1.4",
		"dlv": "^1.1.3",
		"get-value": "^3.0.1",
		"set-value": "^4.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
